{
    "name": "wellingtonhp22/brasileirao_libertadores_api",
    "description": "API REST para consulta de jogos do BrasileirÃ£o e Libertadores",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0",
        "vlucas/phpdotenv": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "test": "phpunit --configuration phpunit.xml",
        "check": "vendor/bin/phpcs --standard=PSR12 src/",
        "fix": "vendor/bin/phpcbf --standard=PSR12 src/"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform-check": false,
        "platform": {
            "php": "7.4",
            "ext-zip": "1.19.1"
        }
    },
    "authors": [
        {
            "name": "Wellington",
            "email": "wellingtonhp22@gmail.com"
        }
    ],
    "homepage": "https://github.com/WellingtonHp22/Brasileirao_Libertadores_Api",
    "minimum-stability": "stable",
    "prefer-stable": true
}